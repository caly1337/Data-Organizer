FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Set environment to bind to 0.0.0.0
ENV HOSTNAME=0.0.0.0

# Start development server (Next.js default port 3000)
CMD ["npm", "run", "dev", "--", "-H", "0.0.0.0"]
